<p id="notice"><%= notice %></p>

<h1>Classes</h1>

  <% @courses.each do |course| %>
    <div id="courseContainer">
      <%= course.title %>
      <%= course.description %>
      <%= link_to 'Show', course %>
      <%= link_to 'Edit', edit_course_path(course) %>
      <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

<br>

<%= link_to 'New Course', new_course_path %>
